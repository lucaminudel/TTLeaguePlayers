{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "sam-build",
      "type": "shell",
      "command": "sam build",
      "group": "build"
    },
    {
      "label": "sam-local-dev",
      "type": "shell",
      "command": "sam local start-api --config-env dev --port 3000",
      "group": "test"
    },
    {
      "label": "sam-local-test",
      "type": "shell",
      "command": "sam local start-api --config-env test --port 3001",
      "group": "test"
    },
    {
      "label": "sam-deploy-staging",
      "type": "shell",
      "command": "sam deploy --config-env staging",
      "group": "build"
    },
    {
      "label": "sam-deploy-prod",
      "type": "shell",
      "command": "sam deploy --config-env prod",
      "group": "build"
    }
  ]
}