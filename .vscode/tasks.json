{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "sam-refresh-build dev-env",
      "type": "shell",
      "command": "sam build --config-env dev",
      "group": "build"
    },
    {
      "label": "sam-refresh-build dev-env (extra debug logs)",
      "type": "shell",
      "command": "sam build --config-env dev --debug",
      "group": "build"
    },
    {
      "label": "sam-start dev-env",
      "type": "shell",
      "dependsOn": "sam-refresh-build dev-env",
      "command": "sam local start-api --config-env dev --port 3000",
      "group": "test"
    },
    {
      "label": "sam-start dev-env (ready to attach the debugger)",
      "type": "shell",
      "dependsOn": "sam-refresh-build dev-env (extra debug logs)",
      "command": "export SAM_CLI_CONTAINER_CONNECTION_TIMEOUT=120; sam local start-api --config-env dev --port 3000 --debug-port 5858 --debugger-path ~/.vsdbg_linux_arm64 --warm-containers LAZY --debug",
      "group": "test",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "sam-start test-env",
      "type": "shell",
      "dependsOn": "sam-refresh-build test-env",
      "command": "sam local start-api --config-env test --port 3003",
      "group": "test"
    },
    {
      "label": "sam-refresh-build test-env",
      "type": "shell",
      "hide": true, 
      "command": "sam build --config-env test",
      "group": "build"
    },
    {
      "label": "sam-deploy staging-env",
      "type": "shell",
      "command": "sam deploy --config-env staging",
      "group": "build"
    },
    {
      "label": "sam-deploy prod-env",
      "type": "shell",
      "command": "sam deploy --config-env prod",
      "group": "build"
    },
    {
      "label": "api-tests test-env",
      "type": "shell",
      "command": "./scripts/ci_tasks/run_backend_acceptance_tests.sh 3003 test",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "C+ api-tests test-env",
      "type": "shell",
      "command": "./scripts/ci_tasks/run_backend_acceptance_tests.sh 3003 test COGNITO",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },    
    {
      "label": "C+ staging smoke tests",
      "type": "shell",
      "command": "./scripts/ci_tasks/run_smoke_tests_staging.sh",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },    
    {
      "label": "full-stack-builds-tests-pipeline test-env",
      "type": "shell",
      "command": "./scripts/ci_tasks/run_full_stack_builds_tests_pipeline.sh",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "C+ full-stack-builds-tests-pipeline test-env",
      "type": "shell",
      "command": "./scripts/ci_tasks/run_full_stack_builds_tests_pipeline.sh COGNITO",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}